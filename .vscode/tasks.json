// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "install:all",
			"label": "install-extension-deps",
			"options": {
				"cwd": "${workspaceFolder}${pathSeparator}vscode-extension"
			}
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}${pathSeparator}vscode-extension"
			},
			"dependsOn": [
				"webview-ui",
				// "code-blocks-server",
			]
		},
		{
			"type": "npm",
			"script": "build",
			"label": "webview-ui",
			"options": {
				"cwd": "${workspaceFolder}${pathSeparator}vscode-extension${pathSeparator}webview-ui"
			},
		},
		{
			"label": "code-blocks-server",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--release"
			],
			"options": {
				"cwd": "${workspaceFolder}${pathSeparator}code-blocks-server${pathSeparator}code-blocks-server"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "(.*)",
					"file": 1,
					"location": 1,
					"severity": 1,
					"code": 1,
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": ".*"
					},
					"endsPattern": {
						"regexp": ".*"
					},
				}
			}
		}
	]
}